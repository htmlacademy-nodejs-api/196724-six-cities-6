{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli-help": "ts-node ./src/main.cli.ts --help",
    "cli-version": "ts-node ./src/main.cli.ts --version",
    "cli-import": "ts-node ./src/main.cli.ts --import ./mocks/offers.tsv admin test 127.0.0.1 27017 six-cities | pino-pretty --colorize --translateTime SYS:standard",
    "cli-generate": "ts-node ./src/main.cli.ts --generate 3 ./mocks/offers.tsv http://localhost:4000/api",
    "run-json-server": "json-server mocks/mock-server-data.json",
    "start": "npm run build && node ./dist/main.application.js",
    "start:dev": "nodemon",
    "docker-mongo": "docker compose -f ./docker-compose.dev.yml --env-file ./.env -p six-cities up -d"
  },
  "devDependencies": {
    "@types/convict": "^6.1.4",
    "@types/convict-format-with-validator": "^6.0.3",
    "@types/express": "^4.17.18",
    "@types/luxon": "^3.4.2",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^0.17.4",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "2.6.2",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^19.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^11.5.0",
    "axios": "^1.6.7",
    "class-transformer": "^0.5.1",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.1",
    "luxon": "^3.4.4",
    "mongoose": "^7.5.3",
    "pino": "^8.15.1",
    "reflect-metadata": "^0.1.13"
  }
}
